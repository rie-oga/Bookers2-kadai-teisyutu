<!-- フォロワーがいなかったら -->
<% if @user.followers.count == 0 %>

	<p>ユーザーはいません</p>

<!-- ここまで -->
<!-- フォロワーがいたら -->
<% else %>

  <h2>Follower Users</h2>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="4"></th>
			</tr>
		</thead>
		<tbody>
			<% @user.followers.each do |follower| %>
			<tr>
          		<td><%= attachment_image_tag follower, :profile_image, fallback: "no_image.jpg", size: "50x50" %></td>
              	<td><%= follower.name %></td>
          		<td>フォロー数：<%= follower.followings.count %></td>
          		<td>フォロワー数：<%= follower.followers.count %></td>
          		<td><%= link_to "Show", user_path(follower.id) %></td>
          	</tr>
			<% end %>
		</tbody>

<!-- ここまで -->
<% end %>
